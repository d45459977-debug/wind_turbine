{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WindTurbineMonitor;Username=postgres;Password=your_password"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Debug"
    }
  },
  "SensorSettings": {
    "Protocol": "Simulator",
    "Simulator": {
      "Enabled": true,
      "UpdateIntervalMs": 2000,
      "RandomizeData": true
    },
    "OpcUa": {
      "Endpoint": "opc.tcp://localhost:4840",
      "Username": "",
      "Password": "",
      "Enabled": false
    },
    "Modbus": {
      "Host": "192.168.1.100",
      "Port": 502,
      "SlaveId": 1,
      "Enabled": false
    },
    "Mqtt": {
      "Broker": "localhost",
      "Port": 1883,
      "Topic": "turbine/+/data",
      "Username": "",
      "Password": "",
      "Enabled": false
    }
  },
  "SignalR": {
    "UpdateInterval": 2000,
    "EnableDetailedErrors": true,
    "KeepAliveInterval": "00:00:10",
    "HandshakeTimeout": "00:00:15",
    "ClientTimeoutInterval": "00:00:30"
  },
  "Application": {
    "Name": "Wind Turbine Monitoring System",
    "Version": "1.0.0",
    "Environment": "Production"
  },
  "AllowedHosts": "*"
}
