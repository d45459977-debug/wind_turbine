{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=WindTurbineMonitor_Dev;Username=postgres;Password=postgres"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug",
      "WindTurbineMonitor": "Debug"
    }
  },
  "SensorSettings": {
    "Protocol": "Simulator",
    "Simulator": {
      "Enabled": true,
      "UpdateIntervalMs": 2000,
      "RandomizeData": true,
      "SimulateErrors": true
    }
  },
  "SignalR": {
    "UpdateInterval": 2000,
    "EnableDetailedErrors": true
  },
  "Application": {
    "Name": "Wind Turbine Monitoring System",
    "Version": "1.0.0",
    "Environment": "Development"
  }
}
